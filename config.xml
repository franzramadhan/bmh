<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.totalindo.bmh"
    version   = "1.0.4">

<name>BMH</name>

<description>
Aplikasi mobile untuk nasabah dan donatur Baitul Maal Hidayatullah
</description>

<author href="https://franzramadhan.com" email="franz.ramadhan@gmail.com">
Frans Caisar Ramadhan
</author>

<access origin="*" />


<gap:platform name="ios" />
<gap:platform name="android" />
<gap:platform name="winphone" />

<plugin name="File" value="org.apache.cordova.FileUtils" />
<plugin name="FileTransfer" value="org.apache.cordova.FileTransfer" />
<plugin name="Geolocation" value="org.apache.cordova.GeoBroker" />


<gap:plugin name="com.millerjames01.sqlite-plugin" version="1.0.1" />

<gap:plugin name="com.adobe.plugins.gaplugin" />

<icon src="assets/icon/hdpi.png" density="hdpi" />
<icon src="assets/icon/mdpi.png" density="mdpi" />
<icon src="assets/icon/xxhdpi.png" density="xxhdpi" />
<icon src="assets/icon/xhdpi.png" density="xhdpi" />
<icon src="assets/icon/xxxhdpi.png" density="xxxhdpi" />


</widget>
